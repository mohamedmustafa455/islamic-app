<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.qran.QranFragment">

    <ImageView
        android:id="@+id/imag_header_qran"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:src="@drawable/moshafheader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.20"
        />
    <View
        android:id="@+id/line_up_header"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/imag_header_qran"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_header_sora_name"

        />

    <TextView
        android:id="@+id/tv_header_count_iat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/header_cont_iat"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/line_up_header"
        app:layout_constraintStart_toEndOf="@id/tv_header_sora_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line_down_header"/>

    <TextView
        android:id="@+id/tv_header_sora_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/soraname"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/line_up_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_header_count_iat"
        app:layout_constraintBottom_toTopOf="@id/line_down_header"/>

    <View
        android:id="@+id/line_down_header"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/orange"
        android:layout_marginVertical="8dp"
        app:layout_constraintTop_toBottomOf="@id/tv_header_sora_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_name_of_sora"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/line_down_header"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/item_name_of_sora_and_count_iat"/>

    <View
        android:id="@+id/line_vertical_header"
        android:layout_width="3dp"
        android:layout_height="0dp"
        android:background="@color/orange"
        app:layout_constraintTop_toBottomOf="@id/line_up_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>