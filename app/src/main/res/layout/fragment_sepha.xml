<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.sepha.SephaFragment">
    <ImageView
        android:id="@+id/imag_header_sepha"
        android:layout_width="40dp"
        android:layout_height="60dp"
        android:src="@drawable/hedarsebha"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/imag_body_sepha"
        android:layout_width="300dp"
        android:layout_height="208dp"
        android:src="@drawable/bodysebha"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_cont_sepha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_cont_sepha"
        android:textColor="@color/light_black"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imag_body_sepha" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_cont_sebha"
        android:layout_width="69dp"
        android:layout_height="81dp"
        android:backgroundTint="@color/orange"
        app:cornerRadius="25dp"
        android:text="@string/cont_sebha"
        android:layout_marginTop="26dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tv_cont_sepha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_name_zekr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/orange"
        app:cornerRadius="25dp"
        android:text="@string/zekrsobhanallh"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btn_cont_sebha"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />




</androidx.constraintlayout.widget.ConstraintLayout>