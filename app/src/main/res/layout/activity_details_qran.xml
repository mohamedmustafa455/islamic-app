<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainbackground"
    tools:context=".ui.activity.detailesqran.DetailsQranActivity">


    <TextView
        android:id="@+id/tv_app_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="18dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="@string/nameappinactionbar"
        />

    <FrameLayout
        android:id="@+id/frame_details_qran"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/frame_details_shape"
        android:layout_margin="29dp"
        app:layout_constraintTop_toBottomOf="@id/tv_app_bar_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_sora_sora_name_details_Qoran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="sora name "
                android:gravity="center"
                android:textSize="25sp"
                android:layout_marginTop="39dp"
                android:layout_marginBottom="12dp"
                android:textColor="@color/light_black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/line_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <View
                android:id="@+id/line_one"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/orange"
                android:layout_marginHorizontal="40dp"

                app:layout_constraintTop_toBottomOf="@id/tv_sora_sora_name_details_Qoran"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               />
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/line_one"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                >
                <TextView
                    android:id="@+id/tv_content_qran"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="content "
                    android:textSize="20sp"
                    android:gravity="start"
                    android:layout_marginTop="12dp"
                    android:scrollbars="vertical"
                    android:scrollbarStyle="insideOverlay"
                    android:padding="16dp"
                    android:textColor="@color/light_black"


                    />

            </ScrollView>


        </androidx.constraintlayout.widget.ConstraintLayout>



    </FrameLayout>



</androidx.constraintlayout.widget.ConstraintLayout>